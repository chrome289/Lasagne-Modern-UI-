        <TextBox x:Name="tb1" Height="36" FontSize="14" FontFamily="Tahoma" BorderThickness="1" Margin="395,45,80,424" VerticalContentAlignment="Center" IsReadOnly="True" />
        <CheckBox x:Name="checkBox1" Content="Two Way Sync" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked" VerticalContentAlignment="Center" Margin="70,380,439,95"/>
    </Grid>
