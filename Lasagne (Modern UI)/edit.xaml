        <Label Content="Location of Second Directory" Height="35" Width="199" FontFamily="Tahoma" FontSize="14" VerticalContentAlignment="Center" Margin="70,240,391,230"/>
        <TextBox x:Name="tb2" Height="36"  TextWrapping="Wrap" VerticalContentAlignment="Center" FontFamily="Tahoma" FontSize="14" Margin="70,169,80,300"/>
        <TextBox x:Name="tb3" Height="36"  TextWrapping="Wrap" VerticalContentAlignment="Center" FontFamily="Tahoma" FontSize="14" Margin="70,299,80,170"/>
